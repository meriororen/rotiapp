<!DOCTYPE html>
<html>
<head>
  <title>Kizuna</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="rotiApp">
  <%= render :partial => 'layouts/topbar' %>
  <div class="container">
    <% if !notice.nil? %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if !alert.nil? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
